<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @category.desc %>
</p>

<h3> Products under this category </h3>
<% Product.where(category_id: @category.id).each do |product| %>
<li> <%= product.name %> </li>
<% end %>

<% if current_user && current_user.admin %>
<%= link_to 'Edit', edit_category_path(@category) %>
<% end %><tr>
