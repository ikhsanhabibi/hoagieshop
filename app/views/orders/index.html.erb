<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Breadtype</th>
      <th>Ingredient</th>
      <th>Vegetable</th>
      <th>Condiment</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.breadtype %></td>
        <td><%= order.ingredient %></td>
        <td><%= order.vegetable %></td>
        <td><%= order.condiment %></td>
        <td><%= order.amount %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
<!--        <td><%#= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->

      </tr>
    <% end %>
  </tbody>
</table>

