<html>
  <head>
    <meta charset="utf-8">
    <title> Hoagie Online Shop </title>
  </head>
  <body>
    <header>
      <section>
        <h1> REVIEWS </h1>
        <hr>
      </section>  
      <nav>
        <ul>
          <% if current_user %>
    <li><%= link_to 'Home', root_path %></li>

    <li><%= link_to 'Products', products_path %></li>

    <li><%= link_to 'Your Orders', orders_path %></li>

    <li><%= link_to 'Change Personal Details',edit_user_registration_path %></li>

    <li><%= link_to 'Reviews', reviews_path, class: "active" %></li>

    <li><%= link_to 'About Us', aboutus_index_path %></li>

    <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>

  

<% else %>
    <li><%= link_to 'Home', root_path %></li>

    <li><%= link_to 'Products', products_path %></li>

    <li><%= link_to 'Reviews', reviews_path, class: "active" %></li> 

    <li><%= link_to 'About Us', aboutus_index_path %></li> 
    
    <li><%= link_to 'Sign up', new_user_registration_path %></li>

    <li><%= link_to 'Sign in', new_user_session_path %></li>
<% end %>

        </ul>
      </nav>
      <hr>
    </header>
    <main>
      <section>
<table align="center">
  <thead>
    <tr>
      <td><b>Rating</b></td>
      <td><b>Comment</b></td>
      <td><b>Selfie</b></td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><% review.rating.to_i.times do  %>
          <span class="glyphicon glyphicon-star"></span>
          <% end %>
        </td>
        <td><b>“</b><%= review.comment %><b>”</b></td>
        <td><%= image_tag review.image.thumb.url, width: 128, height: 128%></td>
        <td><%= link_to 'Show', review, class:"btn btn-primary btn-sm" %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_review_path(review), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', review, class:"btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Review', new_review_path, class: "btn btn-primary btn-lg btn-block", role:"button" %>
</section>
    </main>

    <footer> 
      <h3> You will find us here: </h3>
       <div>
        <a href="https://www.facebook.com/" target="blank1"><%= image_tag("facebook", :size => "40x40") %></a>
        <a href="https://instagram.com/" target="blank2"><%= image_tag("instagram", :size => "40x40") %></a>
        <a href="https://www.twitter.com/" target="blank3"><%= image_tag("twitter", :size => "40x40") %></a>
       <div>
    </footer>
  </body> 
</html>





